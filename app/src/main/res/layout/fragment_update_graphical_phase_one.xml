<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".passwordupdate.UpdateGraphicalPhaseOneFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/registrationbackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:src="@drawable/picksizecolortitle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/updategraphicalphaseonenext"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="45dp"
                android:layout_height="50dp"

                android:background="@drawable/nextbutton"
                app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="@+id/imageView4" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48dp"
                android:src="@drawable/updatepassthreephase1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sizetitle"
                app:layout_constraintBottom_toTopOf="@+id/updatesiezspinner"
                app:layout_constraintEnd_toEndOf="@+id/updatesiezspinner"
                app:layout_constraintStart_toStartOf="@+id/updatesiezspinner" />

            <Spinner
                android:id="@+id/updatecolorspinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="35dp"
                android:paddingBottom="5dp"
                android:background="@drawable/spinnerbackground"
                app:layout_constraintBottom_toTopOf="@+id/imageView4"
                app:layout_constraintEnd_toEndOf="@+id/updatesiezspinner"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/updatesiezspinner"
                app:layout_constraintTop_toBottomOf="@+id/updatesiezspinner"
                app:layout_constraintVertical_bias="0.154" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/colortitle"
                app:layout_constraintBottom_toTopOf="@+id/updatecolorspinner"
                app:layout_constraintEnd_toEndOf="@+id/updatecolorspinner"
                app:layout_constraintStart_toStartOf="@+id/updatecolorspinner" />

            <Spinner
                android:id="@+id/updatesiezspinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="116dp"
                android:paddingLeft="40dp"
                android:paddingTop="20dp"
                android:paddingBottom="5dp"

                android:background="@drawable/spinnerbackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView5" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>